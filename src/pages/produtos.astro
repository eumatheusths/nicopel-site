---
// src/pages/produtos.astro
import Layout from '../layouts/Layout.astro';
import ContactSection from '../components/ContactSection.astro';
import ProductTabs from '../components/ProductTabs.astro';
import ProductGallery from '../components/ProductGallery.astro';
import CatalogCTA from '../components/CatalogCTA.astro'; // Importando o novo componente de Download

// IMPORTANTE: Header e Footer já vêm do Layout
---

<Layout title="Nossos Produtos - Nicopel Embalagens">
  
  <main class="pt-20"> 
    
    <section class="relative bg-white pt-20 pb-12 text-center px-4 overflow-hidden">
        <div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/4 w-full max-w-[500px] h-[500px] bg-[#B8E900]/20 blur-[100px] rounded-full pointer-events-none"></div>

        <div class="relative z-10 max-w-4xl mx-auto">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-gray-50 border border-gray-200 text-xs font-bold text-gray-600 mb-6">
                <span class="w-2 h-2 rounded-full bg-[#B8E900]"></span>
                CATÁLOGO COMPLETO
            </div>

            <h1 class="text-4xl md:text-6xl font-extrabold text-gray-900 mb-6 tracking-tight leading-tight">
                Soluções que valorizam <br />
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#8bb300] to-[#5a7d00]">o seu produto.</span>
            </h1>
            
            <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
                Explore nossa linha completa de copos, potes e embalagens personalizadas com a mais alta tecnologia de impressão.
            </p>
        </div>
    </section>

    <ProductGallery />

    <ProductTabs />

    <CatalogCTA />

    <div class="bg-gray-50">
        <ContactSection />
    </div>
    
  </main>

</Layout>