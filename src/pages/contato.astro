---
// src/pages/contato.astro
import Layout from '../layouts/Layout.astro';

const departments = [
  {
    name: "Comercial",
    email: "comercial@nicopel.com.br",
    icon: "M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z",
    desc: "Orçamentos, pedidos e dúvidas sobre produtos."
  },
  {
    name: "Financeiro",
    email: "financeiro@nicopel.com.br",
    icon: "M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
    desc: "Faturamento, boletos e notas fiscais."
  },
  {
    name: "Marketing",
    email: "marketing@nicopel.com.br",
    icon: "M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z",
    desc: "Parcerias, imprensa e branding."
  },
  {
    name: "Compras",
    email: "compras@nicopel.com.br",
    icon: "M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z",
    desc: "Fornecedores e suprimentos."
  },
  {
    name: "Recursos Humanos",
    email: "rh@nicopel.com.br",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0z",
    desc: "Talentos e gestão de pessoas."
  },
  {
    name: "T.I. / Tecnologia",
    email: "ti@nicopel.com.br",
    icon: "M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
    desc: "Suporte técnico e sistemas."
  }
];
---

<Layout title="Fale com a Nicopel">
  <main class="bg-gray-50 min-h-screen pt-32 pb-24 px-4 relative overflow-hidden">
    
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-[#B8E900]/10 rounded-full blur-[100px] pointer-events-none mix-blend-multiply"></div>
    <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue-100/50 rounded-full blur-[100px] pointer-events-none mix-blend-multiply"></div>

    <div class="max-w-6xl mx-auto relative z-10">
      
      <div class="text-center mb-16">
        <span class="text-[#8bb300] font-bold tracking-widest text-sm uppercase mb-3 block">Central de Atendimento</span>
        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-6">
          Como podemos <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#8bb300] to-[#6a8a00]">ajudar você?</span>
        </h1>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto leading-relaxed">
          Selecione o departamento desejado para enviar um e-mail direto à nossa equipe.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {departments.map(dept => (
          <a href={`mailto:${dept.email}`} class="group relative bg-white border border-gray-200 rounded-2xl p-8 hover:border-[#B8E900] hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            
            <div class="w-12 h-12 bg-[#B8E900]/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-[#B8E900] transition-colors duration-300">
                <svg class="w-6 h-6 text-[#7d9e00] group-hover:text-black transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={dept.icon}></path>
                </svg>
            </div>

            <h3 class="text-xl font-bold text-gray-900 mb-2">{dept.name}</h3>
            <p class="text-gray-500 text-sm mb-6 h-10 leading-relaxed">{dept.desc}</p>

            <div class="flex items-center gap-2 text-gray-600 font-mono text-sm bg-gray-50 p-3 rounded-lg border border-gray-100 group-hover:border-[#B8E900]/30 transition-colors">
                <svg class="w-4 h-4 text-[#B8E900]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                <span class="truncate">{dept.email}</span>
            </div>

            <div class="absolute top-6 right-6 opacity-0 group-hover:opacity-100 transition-opacity transform translate-x-2 group-hover:translate-x-0">
                <svg class="w-5 h-5 text-[#B8E900]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
            </div>
          </a>
        ))}
      </div>

      <div class="mt-16 grid md:grid-cols-2 gap-8">
        <div class="bg-white border border-[#25D366]/30 rounded-2xl p-8 flex items-center justify-between group cursor-pointer hover:shadow-lg hover:border-[#25D366] transition-all" onclick="window.open('https://api.whatsapp.com/message/KB4JJZXMVMWXP1?autoload=1&app_absent=0', '_blank')">
            <div>
                <h3 class="text-2xl font-bold text-gray-900 mb-1">WhatsApp Comercial</h3>
                <p class="text-gray-500">Atendimento rápido para orçamentos.</p>
            </div>
            <div class="w-14 h-14 bg-[#25D366]/10 rounded-full flex items-center justify-center group-hover:bg-[#25D366] transition-colors">
                <svg class="w-8 h-8 text-[#25D366] group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.017-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
            </div>
        </div>

        <div class="bg-white border border-gray-200 rounded-2xl p-8 flex items-center justify-between group cursor-pointer hover:shadow-lg hover:border-gray-400 transition-all">
             <div>
                <h3 class="text-2xl font-bold text-gray-900 mb-1">Telefone Fixo</h3>
                <p class="text-gray-500">(43) 3338-4537</p>
                <p class="text-gray-500">Seg. a Sex. das 07:30h às 17:18h</p>
            </div>
             <div class="w-14 h-14 bg-gray-100 rounded-full flex items-center justify-center group-hover:bg-black group-hover:text-white transition-colors text-gray-700">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            </div>
        </div>
      </div>

    </div>
  </main>
</Layout>