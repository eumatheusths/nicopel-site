---
// src/pages/blog/index.astro
import Layout from '../../layouts/Layout.astro';
import ContactSection from '../../components/ContactSection.astro';
import { blogPosts } from '../../data/blogPosts';
---

<Layout title="Blog Nicopel - Dicas e EstratÃ©gias para Embalagens">
  
  <main class="pt-20">
    <section class="relative bg-white pt-20 pb-16 px-4 overflow-hidden">
        <div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/4 w-full max-w-[400px] h-[400px] bg-[#B8E900]/20 blur-[100px] rounded-full pointer-events-none"></div>
        <div class="relative z-10 max-w-7xl mx-auto text-center">
            <h1 class="text-4xl md:text-6xl font-extrabold text-gray-900 mb-6">
                Blog da <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#8bb300] to-[#5a7d00]">Nicopel.</span>
            </h1>
        </div>
    </section>

    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {blogPosts.map((post) => (
                    <article class="bg-white rounded-2xl overflow-hidden shadow-lg border border-gray-100 flex flex-col h-full group">
                        <a href={`/blog/${post.slug}`} class="relative h-48 bg-gray-200 overflow-hidden block">
                             <img 
                                src={post.image} 
                                alt={post.title} 
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" 
                             />
                             <div class="absolute bottom-4 left-4 bg-[#B8E900] text-black text-xs font-bold px-2 py-1 rounded-md uppercase tracking-wide">
                                {post.category}
                             </div>
                        </a>
                        <div class="p-6 flex-1 flex flex-col">
                            <div class="text-sm text-gray-400 mb-3">{post.date}</div>
                            <h3 class="text-xl font-bold text-gray-900 group-hover:text-[#8bb300] transition-colors mb-3">
                                {post.title}
                            </h3>
                            <a href={`/blog/${post.slug}`} class="inline-flex items-center text-[#5a7d00] font-bold hover:gap-2 transition-all mt-auto">
                                Ler artigo completo
                            </a>
                        </div>
                    </article>
                ))}
            </div>
        </div>
    </section>
    <ContactSection />
  </main>
</Layout>