---
// src/components/ContactSection.astro
import { Image } from 'astro:assets';
// Importação da imagem otimizada
import copoDestaqueImg from '../assets/copo-destaque.png';
---

<section class="py-24 bg-gray-50 relative overflow-hidden" id="contato">
  <div class="absolute top-1/2 left-0 -translate-y-1/2 -translate-x-1/4 w-[500px] h-[500px] bg-[#B8E900]/30 blur-[120px] rounded-full -z-10 pointer-events-none"></div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 relative z-10">
    
    <div class="grid lg:grid-cols-12 gap-12 lg:gap-24 items-center">
      
      <div class="lg:col-span-5 flex flex-col">
        <span class="inline-block py-1 px-3 rounded-full bg-[#B8E900] text-black text-sm font-bold w-fit mb-6 shadow-sm">
          FALE COM NOSSO TIME
        </span>
        
        <h2 class="text-4xl lg:text-5xl font-extrabold text-gray-900 tracking-tight leading-tight mb-8">
          Pronto para tornar sua marca tão reconhecida quanto seu <br/>
          <span id="dynamic-word" class="text-[#B8E900] drop-shadow-sm inline-block min-w-[180px] transition-opacity duration-500">Gelato</span>?
        </h2>

        <div class="space-y-5 mb-12">
          {[
            "Enviamos para todo Brasil",
            "Impressões personalizadas em alta qualidade",
            "Acabamento vibrante e zero mancha",
            "Sua Marca conta uma história e gera valor",
            "Compromisso com a segurança alimentar"
          ].map((item) => (
            <div class="flex items-start">
              <div class="flex-shrink-0 h-6 w-6 flex items-center justify-center rounded-full bg-[#B8E900] text-black mt-1 mr-4">
                <svg class="w-4 h-4 font-bold" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
              </div>
              <p class="text-lg text-gray-700 font-medium">{item}</p>
            </div>
          ))}
        </div>

        <div class="relative mt-auto">
            <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-2/3 h-8 bg-black/20 blur-xl rounded-[50%]"></div>
            
            <Image 
                src={copoDestaqueImg} 
                alt="Copo personalizado Nicopel" 
                width={600}
                format="webp"
                quality={90}
                class="relative z-10 w-full max-w-md mx-auto lg:mx-0 drop-shadow-2xl transform hover:scale-105 transition-transform duration-500"
            />
        </div>
      </div>

      <div class="lg:col-span-7">
        <div class="bg-white rounded-3xl shadow-2xl p-8 lg:p-12 relative overflow-hidden border border-gray-100">
          
            <h3 class="text-2xl font-bold text-gray-900 mb-2">
              Solicite seu Orçamento
            </h3>
            <p class="text-gray-600 mb-8">
              Preencha seus dados corporativos e selecione o produto para ver as condições especiais.
            </p>

            <form id="contactForm" class="space-y-5">
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nome Completo</label>
                        <input type="text" id="name" name="name" required class="w-full rounded-lg border-gray-300 border px-4 py-3 focus:ring-2 focus:ring-[#B8E900] focus:border-transparent outline-none transition" placeholder="Seu nome">
                    </div>
                    <div>
                        <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">WhatsApp</label>
                        <input type="tel" id="phone" name="phone" required class="w-full rounded-lg border-gray-300 border px-4 py-3 focus:ring-2 focus:ring-[#B8E900] focus:border-transparent outline-none transition" placeholder="(00) 00000-0000">
                    </div>
                </div>

                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">E-mail Corporativo</label>
                    <input type="email" id="email" name="email" required class="w-full rounded-lg border-gray-300 border px-4 py-3 focus:ring-2 focus:ring-[#B8E900] focus:border-transparent outline-none transition" placeholder="seuemail@empresa.com.br">
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                    <div>
                        <label for="company" class="block text-sm font-medium text-gray-700 mb-1">Nome da Empresa</label>
                        <input type="text" id="company" name="company" class="w-full rounded-lg border-gray-300 border px-4 py-3 focus:ring-2 focus:ring-[#B8E900] focus:border-transparent outline-none transition" placeholder="Razão Social ou Nome Fantasia">
                    </div>
                     <div>
                        <label for="cargo" class="block text-sm font-medium text-gray-700 mb-1">Seu Cargo</label>
                        <input type="text" id="cargo" name="cargo" class="w-full rounded-lg border-gray-300 border px-4 py-3 focus:ring-2 focus:ring-[#B8E900] focus:border-transparent outline-none transition" placeholder="Ex: Comprador, Gerente...">
                    </div>
                </div>

                <div>
                    <label for="tamanho_empresa" class="block text-sm font-medium text-gray-700 mb-1">Tamanho da Empresa (Nº Colaboradores)</label>
                    <div class="relative">
                        <select id="tamanho_empresa" name="tamanho_empresa" class="w-full rounded-lg border-gray-300 border px-4 py-3 focus:ring-2 focus:ring-[#B8E900] focus:border-transparent outline-none transition appearance-none bg-white">
                            <option value="" disabled selected>Selecione uma opção</option>
                            <option value="3-50">De 3 a 50 colaboradores</option>
                            <option value="50-250">De 50 a 250 colaboradores</option>
                            <option value="250-500">De 250 a 500 colaboradores</option>
                            <option value="500-2000">De 500 a 2.000 colaboradores</option>
                            <option value="mais-2000">Mais de 2.000 colaboradores</option>
                        </select>
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-500">
                            <svg class="h-4 w-4 fill-current" viewBox="0 0 20 20"><path d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"/></svg>
                        </div>
                    </div>
                </div>

                <hr class="border-gray-100 my-4" />

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">Qual produto você precisa?</label>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                        <label class="product-option cursor-pointer group">
                            <input type="radio" name="produto" value="copos" class="peer sr-only" onchange="updateFormRules('copos')">
                            <div class="p-3 border border-gray-200 rounded-lg text-center peer-checked:bg-[#B8E900] peer-checked:text-black peer-checked:border-[#B8E900] hover:border-[#B8E900] transition font-medium text-sm">Copos</div>
                        </label>
                        <label class="product-option cursor-pointer group">
                            <input type="radio" name="produto" value="potes" class="peer sr-only" onchange="updateFormRules('potes')">
                            <div class="p-3 border border-gray-200 rounded-lg text-center peer-checked:bg-[#B8E900] peer-checked:text-black peer-checked:border-[#B8E900] hover:border-[#B8E900] transition font-medium text-sm">Potes</div>
                        </label>
                        <label class="product-option cursor-pointer group">
                            <input type="radio" name="produto" value="pizza" class="peer sr-only" onchange="updateFormRules('pizza')">
                            <div class="p-3 border border-gray-200 rounded-lg text-center peer-checked:bg-[#B8E900] peer-checked:text-black peer-checked:border-[#B8E900] hover:border-[#B8E900] transition font-medium text-sm">Cx Pizza</div>
                        </label>
                        <label class="product-option cursor-pointer group">
                            <input type="radio" name="produto" value="sorvete" class="peer sr-only" onchange="updateFormRules('sorvete')">
                            <div class="p-3 border border-gray-200 rounded-lg text-center peer-checked:bg-[#B8E900] peer-checked:text-black peer-checked:border-[#B8E900] hover:border-[#B8E900] transition font-medium text-sm">Cx Sorvete</div>
                        </label>
                        <label class="product-option cursor-pointer group">
                            <input type="radio" name="produto" value="acessorios" class="peer sr-only" onchange="updateFormRules('acessorios')">
                            <div class="p-3 border border-gray-200 rounded-lg text-center peer-checked:bg-[#B8E900] peer-checked:text-black peer-checked:border-[#B8E900] hover:border-[#B8E900] transition font-medium text-sm">Acessórios</div>
                        </label>
                        <label class="product-option cursor-pointer group">
                            <input type="radio" name="produto" value="especiais" class="peer sr-only" onchange="updateFormRules('especiais')">
                            <div class="p-3 border border-gray-200 rounded-lg text-center peer-checked:bg-[#B8E900] peer-checked:text-black peer-checked:border-[#B8E900] hover:border-[#B8E900] transition font-medium text-sm">Projetos Especifico</div>
                        </label>
                    </div>
                </div>

                <div id="type-selection-area" class="hidden opacity-0 transition-opacity duration-300">
                    <label class="block text-sm font-medium text-gray-700 mb-3">Qual o acabamento?</label>
                    <div class="flex gap-4">
                        <label class="flex items-center cursor-pointer">
                            <input type="radio" name="acabamento" value="branco" class="w-5 h-5 text-[#B8E900] focus:ring-[#B8E900]" checked onchange="calculateMinimum()">
                            <span class="ml-2 text-gray-700">Padrão (Branco/Genérico)</span>
                        </label>
                        <label class="flex items-center cursor-pointer">
                            <input type="radio" name="acabamento" value="personalizado" class="w-5 h-5 text-[#B8E900] focus:ring-[#B8E900]" onchange="calculateMinimum()">
                            <span class="ml-2 text-gray-700 font-bold">Personalizado (Sua Marca)</span>
                        </label>
                    </div>
                </div>

                <div id="moq-display" class="hidden bg-gray-50 rounded-xl p-4 border border-gray-200 flex items-center justify-between">
                    <div>
                        <p class="text-xs text-gray-500 uppercase tracking-wide font-bold">Quantidade Mínima</p>
                        <p class="text-xl font-bold text-gray-900" id="moq-value">-- unidades</p>
                    </div>
                    <div class="h-10 w-10 rounded-full bg-[#B8E900] flex items-center justify-center text-black">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                    </div>
                </div>

                <input type="hidden" name="utm_source" id="utm_source" />
                <input type="hidden" name="utm_medium" id="utm_medium" />
                <input type="hidden" name="utm_campaign" id="utm_campaign" />
                <input type="hidden" name="utm_content" id="utm_content" />
                <input type="hidden" name="utm_term" id="utm_term" />
                <input type="hidden" name="utm_id" id="utm_id" />
                <input type="hidden" name="fbclid" id="fbclid" />
                <input type="hidden" name="gclid" id="gclid" />
                <input type="hidden" name="gclientid" id="gclientid" />
                <input type="hidden" name="referrer" id="referrer" />
                <input type="hidden" name="utm_referrer" id="utm_referrer" />
                <input type="hidden" name="ga_utm" id="ga_utm" />
                
                <input type="hidden" name="conversion_identifier" value="orcamento-site-nicopel" />
                <input type="hidden" name="message" id="hidden_message" />

                <div class="pt-2">
                    <button type="submit" id="submitBtn" class="w-full bg-[#B8E900] text-black font-bold text-lg px-8 py-4 rounded-xl hover:bg-[#a3cf00] hover:scale-[1.02] transition-all shadow-lg flex items-center justify-center gap-2">
                        <span>Solicitar Orçamento</span>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                    </button>
                    <div id="formStatus" class="hidden mt-4 p-4 rounded-xl text-center text-sm font-bold border"></div>
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
    // --- 1. LÓGICA DE ANIMAÇÃO DO TEXTO ---
    const words = ["Sorvete", "Açaí", "Pizza", "Café", "Gelato"];
    let wordIndex = 0;
    const dynamicElement = document.getElementById("dynamic-word");

    if(dynamicElement) {
        setInterval(() => {
            dynamicElement.style.opacity = '0';
            setTimeout(() => {
                wordIndex = (wordIndex + 1) % words.length;
                dynamicElement.innerText = words[wordIndex];
                dynamicElement.style.opacity = '1';
            }, 500);
        }, 2500);
    }

    // --- 2. LÓGICA DO FORMULÁRIO (REGRAS DE QUANTIDADE) ---
    let currentProduct = '';
    const rules = {
        'copos': { white: 1000, custom: 6000 },
        'potes': { white: 1000, custom: 6000 },
        'pizza': { white: 200, custom: 500 },
        'sorvete': { white: 1000, custom: 2000 },
        'especiais': { white: 1000, custom: 2000 },
        'acessorios': { white: 1000, custom: 2000 }
    };

    window.updateFormRules = (product) => {
        currentProduct = product;
        const typeArea = document.getElementById('type-selection-area');
        const moqDisplay = document.getElementById('moq-display');

        if(typeArea) typeArea.classList.remove('hidden');
        if(moqDisplay) moqDisplay.classList.remove('hidden');
        setTimeout(() => {
            if(typeArea) typeArea.classList.remove('opacity-0');
        }, 50);

        const whiteOption = document.querySelector('input[name="acabamento"][value="branco"]');
        if(whiteOption) whiteOption.checked = true;

        calculateMinimum();
    }

    window.calculateMinimum = () => {
        if (!currentProduct) return;
        const typeInput = document.querySelector('input[name="acabamento"]:checked');
        if(!typeInput) return;
        
        const type = typeInput.value;
        const valueElement = document.getElementById('moq-value');
        let quantity = 0;
        
        if (rules[currentProduct]) {
             if (type === 'branco') quantity = rules[currentProduct].white;
             else quantity = rules[currentProduct].custom;
        }

        if(valueElement) {
            valueElement.innerText = quantity.toLocaleString('pt-BR') + " unidades";
        }
    }

    // --- 3. LÓGICA DE RASTREAMENTO ---
    document.addEventListener('DOMContentLoaded', () => {
        const urlParams = new URLSearchParams(window.location.search);
        const trackingFields = [
            'utm_source', 'utm_medium', 'utm_campaign', 'utm_content', 'utm_term', 
            'utm_id', 'fbclid', 'gclid', 'gclientid', 'utm_referrer', 'ga_utm'
        ];
        
        trackingFields.forEach(field => {
            const value = urlParams.get(field);
            const input = document.getElementById(field);
            if (value && input) input.value = value;
        });

        const referrerInput = document.getElementById('referrer');
        if (referrerInput && document.referrer) referrerInput.value = document.referrer;
        
        const gclientInput = document.getElementById('gclientid');
        if (gclientInput && !gclientInput.value) {
            const match = document.cookie.match(/(?:^|; )_ga=([^;]*)/);
            if (match) gclientInput.value = match[1];
        }
    });

    // --- 4. ENVIO DO FORMULÁRIO (INTEGRAÇÃO API) ---
    const form = document.getElementById('contactForm');
    const btn = document.getElementById('submitBtn');
    const status = document.getElementById('formStatus');

    if(form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const produtoSel = document.querySelector('input[name="produto"]:checked')?.value || 'Não selecionado';
            const acabamentoSel = document.querySelector('input[name="acabamento"]:checked')?.value || 'Não selecionado';
            const tamanhoSel = document.getElementById('tamanho_empresa').value;
            const cargoSel = document.getElementById('cargo').value;
            const qtdMinima = document.getElementById('moq-value')?.innerText || '-';

            const mensagemFinal = `
                Produto: ${produtoSel}
                Acabamento: ${acabamentoSel}
                Qtd. Mínima Prevista: ${qtdMinima}
                Tamanho Empresa: ${tamanhoSel}
                Cargo: ${cargoSel}
            `;

            document.getElementById('hidden_message').value = mensagemFinal;

            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = `<svg class="animate-spin h-5 w-5 text-black" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> ENVIANDO...`;

            const formData = new FormData(form);

            try {
                const response = await fetch('/api/orcamento', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    if(status) {
                        status.innerHTML = "Solicitação enviada com sucesso! <br/> Em breve nossa equipe comercial entrará em contato.";
                        status.classList.remove('hidden', 'bg-red-100', 'text-red-600', 'border-red-200');
                        status.classList.add('block', 'bg-green-100', 'text-green-700', 'border-green-200');
                    }
                    form.reset();
                    document.getElementById('type-selection-area').classList.add('hidden');
                    document.getElementById('moq-display').classList.add('hidden');
                } else {
                    throw new Error('Erro no servidor');
                }
            } catch (error) {
                if(status) {
                    status.innerText = "Erro ao enviar. Por favor, tente pelo WhatsApp.";
                    status.classList.remove('hidden', 'bg-green-100', 'text-green-700', 'border-green-200');
                    status.classList.add('block', 'bg-red-100', 'text-red-600', 'border-red-200');
                }
            } finally {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        });
    }
</script>