---
// src/components/ProductGallery.astro

const galleryItems = [
  {
    category: "Copos",
    title: "Copos Personalizados",
    image: "/galeria-copo.png", // Alterado para .png
    size: "large"
  },
  {
    category: "Potes",
    title: "Potes para Alimentos",
    image: "/galeria-pote.png", // Alterado para .png
    size: "large"
  },
  {
    category: "Pizza",
    title: "Caixas de Pizza Fotográficas",
    image: "/galeria-pizza.png", // Alterado para .png
    size: "small"
  },
  {
    category: "Sorvetes",
    title: "Embalagens para Sorvete",
    image: "/galeria-sorvete.png", // Alterado para .png
    size: "small"
  },
  {
    category: "Especiais",
    title: "Projetos Especiais",
    image: "/galeria-especial.png", // Alterado para .png
    size: "small"
  }
];
---

<section class="py-24 bg-white" id="galeria">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="text-center mb-16">
      <span class="text-[#B8E900] font-bold tracking-widest text-sm uppercase mb-2 block">Inspiração</span>
      <h2 class="text-4xl md:text-5xl font-extrabold text-gray-900 tracking-tight mb-4">
        Nossos Produtos em <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#8bb300] to-[#5a7d00]">Cena.</span>
      </h2>
      <p class="text-gray-500 max-w-2xl mx-auto text-lg">
        Veja a qualidade e o acabamento que fazem da Nicopel a escolha das grandes marcas.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-6 auto-rows-[300px]">
      
      {galleryItems.map((item, index) => (
        <div class={`group relative rounded-3xl overflow-hidden cursor-pointer ${
          item.size === 'large' ? 'lg:col-span-3' : 'lg:col-span-2'
        }`}>
          <img 
            src={item.image} 
            alt={item.title} 
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-80 group-hover:opacity-90 transition-opacity"></div>
          
          <div class="absolute bottom-0 left-0 p-8 transform translate-y-2 group-hover:translate-y-0 transition-transform duration-500">
            <span class="inline-block px-3 py-1 mb-3 text-xs font-bold text-black bg-[#B8E900] rounded-full uppercase tracking-wider">
              {item.category}
            </span>
            <h3 class="text-2xl font-bold text-white leading-tight group-hover:text-[#B8E900] transition-colors">
              {item.title}
            </h3>
          </div>
        </div>
      ))}

    </div>
  </div>
</section>