---
// src/components/History.astro

const milestones = [
  {
    year: "2000",
    title: "O Primeiro Passo",
    description: "Nossa jornada começou em Novembro de 2000, em um pequeno espaço de 30m². O foco inicial era a serigrafia, movidos pelo propósito de entregar soluções.",
    icon: "start"
  },
  {
    year: "2010",
    title: "Evolução Tecnológica",
    description: "Expandimos nossos horizontes investindo em tecnologia Offset. Deixamos de ser apenas uma estamparia para nos tornar uma indústria gráfica completa.",
    icon: "tech"
  },
  {
    year: "2018",
    title: "O Salto de Qualidade",
    description: "Mudança estratégica para ampliar a capacidade. Novos maquinários (Roland 700, SBL) chegaram para garantir precisão e velocidade na produção.",
    icon: "expansion"
  },
  {
    year: "2025",
    title: "25 Anos de História",
    description: "Hoje, com 180 colaboradores e um parque gráfico de 6.000m², transformamos matéria-prima em mais de 4 milhões de embalagens todos os meses.",
    icon: "trophy"
  }
];
---

<section class="relative bg-white py-24 overflow-hidden" id="historia-timeline">
  
  <div class="absolute top-1/4 left-0 -translate-x-1/2 w-[600px] h-[600px] bg-[#B8E900]/10 blur-[120px] rounded-full pointer-events-none"></div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 relative z-10">
    
    <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-extrabold text-gray-900 mb-6">
            Confira nossa trajetória em vídeo
        </h2>
    </div>

    <div class="relative max-w-5xl mx-auto mb-32">
        <div class="relative rounded-3xl overflow-hidden shadow-2xl shadow-gray-200 border-4 border-white bg-black aspect-video group">
            
            <video 
                autoplay
                loop
                muted
                playsinline
                controls
                class="w-full h-full object-cover"
            >
                <source src="/background-hero.mp4" type="video/mp4" />
                Seu navegador não suporta vídeos HTML5.
            </video>

        </div>
        <div class="absolute -inset-4 bg-[#B8E900]/30 rounded-[2.5rem] blur-2xl -z-10"></div>
    </div>

    <div class="relative">
      <div class="absolute left-8 md:left-1/2 top-0 bottom-0 w-px bg-gray-200 md:-translate-x-1/2 h-full"></div>

      <div class="space-y-16">
        {milestones.map((item, index) => (
          <div class={`relative flex flex-col md:flex-row items-center ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
            
            <div class="pl-20 md:pl-0 md:w-1/2 md:px-12 text-left">
              <div class={`bg-white p-8 rounded-2xl border border-gray-100 shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300 relative group ${index % 2 === 0 ? 'md:text-left' : 'md:text-right'}`}>
                
                <div class={`hidden md:block absolute top-1/2 -translate-y-1/2 w-4 h-4 bg-white border-b border-l border-gray-100 rotate-45 ${index % 2 === 0 ? '-left-2' : '-right-2 border-l-0 border-b-0 border-t border-r'}`}></div>

                <span class="text-[#8bb300] font-bold text-7xl opacity-10 absolute -top-2 right-4 select-none font-serif italic group-hover:opacity-20 transition-opacity">
                    {item.year}
                </span>

                <h3 class="text-2xl font-bold text-gray-900 mb-3 relative z-10">{item.title}</h3>
                <p class="text-gray-600 leading-relaxed relative z-10">
                  {item.description}
                </p>
              </div>
            </div>

            <div class="absolute left-8 md:left-1/2 -translate-x-1/2 flex items-center justify-center w-12 h-12 rounded-full bg-[#B8E900] shadow-[0_0_0_8px_rgba(255,255,255,1)] border-4 border-white z-20">
               {item.icon === 'start' && <span class="text-lg font-bold">00</span>}
               {item.icon === 'tech' && <span class="text-lg font-bold">10</span>}
               {item.icon === 'expansion' && <span class="text-lg font-bold">18</span>}
               {item.icon === 'trophy' && <span class="text-lg font-bold">25</span>}
            </div>

            <div class="hidden md:block md:w-1/2"></div>
            
            <div class="md:hidden absolute left-24 top-0 -translate-y-1">
                 <span class="text-xs font-bold text-[#B8E900] bg-black px-2 py-1 rounded-md">{item.year}</span>
            </div>

          </div>
        ))}
      </div>
    </div>

  </div>
</section>