  </div>
  <script is:inline>
      function openTalentModal() { const modal = document.getElementById('talentModal'); modal.classList.remove('hidden'); }
      function closeTalentModal() { const modal = document.getElementById('talentModal'); modal.classList.add('hidden'); }
      document.addEventListener('keydown', function(event) { if (event.key === "Escape") closeTalentModal(); });
  </script>
</footer>